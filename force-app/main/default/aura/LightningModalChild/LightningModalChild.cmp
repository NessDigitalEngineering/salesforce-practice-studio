<aura:component >
	<!-- Attriute to show header Text -->
	<aura:attribute name="componentName" type="String"  />
	<aura:handler  name="init" value="{!this}" action="{!c.doinit}"/>
	<!-- Modal Code -->
	<div>
		<section role="dialog" class="slds-modal slds-fade-in-open">
			
		    <div class="slds-modal__container">	 
				<header class="slds-modal__header" >
					<button 
					class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse"
					onclick="{!c.closeModal}">
						<lightning:icon iconName="utility:close" class="slds-button__icon slds-button__icon_large slds-button_icon-inverse iconCss" size="small" />
						
						<span class="slds-assistive-text">Close</span>
				
				</button>
				</header>   	
			     <!-- Main Body of Modal -->
			      <div class="slds-modal__content"  aura:id="modalId">

				  </div> 			
			     <!-- Footer of Modal -->		    
		    </div>
		</section>

		<div class="slds-backdrop slds-backdrop_open">

		</div>
	</div>
</aura:component>